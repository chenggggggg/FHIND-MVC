@model FHIND_MVC.Models.Student
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div id="login-div">
    @using (Html.BeginForm("Authorize" , "LoginController" , FormMethod.Post))
    {
        <table>
            <tr>
                <td></td>
                <td style="text-decoration:underline">App Name</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Email)</td>
                <td>@Html.EditorFor(model => model.Email)</td>
            </tr>

            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.Email)</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(model => model.Wachtwoord)</td>
                <td>@Html.EditorFor(model => model.Wachtwoord)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(model => model.Wachtwoord)</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" name="name" value="Login" />
                    <input type="reset" name="name" value="Clear" />
                </td>
            </tr>
        </table>
    }
</div>